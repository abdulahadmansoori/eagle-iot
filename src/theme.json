{
  "colors": {
    "primary": "#007bff",
    "secondary": "#6c757d",
    "success": "#28a745",
    "error": "#dc3545",
    "warning": "#ffc107",
    "info": "#17a2b8",
    "background": "#f8f9fa",
    "text": "#343a40"
  },
  "typography": {
    "heading": {
      "fontFamily": "Roboto",
      "fontSize": 24,
      "fontWeight": "bold",
      "color": "#343a40"
    },
    "body": {
      "fontFamily": "Roboto",
      "fontSize": 16,
      "fontWeight": "normal",
      "color": "#6c757d"
    },
    "button": {
      "fontFamily": "Roboto",
      "fontSize": 18,
      "fontWeight": "bold",
      "color": "#ffffff"
    }
  },
  "spacing": {
    "small": 8,
    "medium": 16,
    "large": 24
  },
  "borders": {
    "radius": 8,
    "width": 1,
    "color": "#ced4da"
  },
  "shadows": {
    "small": {
      "shadowColor": "#000",
      "shadowOffset": {
        "width": 0,
        "height": 1
      },
      "shadowOpacity": 0.2,
      "shadowRadius": 1.41
    },
    "medium": {
      "shadowColor": "#000",
      "shadowOffset": {
        "width": 0,
        "height": 3
      },
      "shadowOpacity": 0.29,
      "shadowRadius": 4.65
    },
    "large": {
      "shadowColor": "#000",
      "shadowOffset": {
        "width": 0,
        "height": 5
      },
      "shadowOpacity": 0.34,
      "shadowRadius": 6.27
    }
  }
}
